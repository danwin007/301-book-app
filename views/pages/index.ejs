<!DOCTYPE html>

  <%- include('./layout/head.ejs') %>
  <header>

   
  </header>

  <body>






    <h1>Hello World!!</h1>

    <h3>Saved Book List</h3> 
    <p><%= books.length %> books saved</p>
    <ul>
      <% books.forEach( book => { %>
      <li>
        <img src="<%= book.image_url %>" alt="<%= book.title %>" />
      </li>
      <li>
        <%= book.title %>
      </li>
      <li>
        <%= book.author %>
      </li>

      <li>
        <%= book.isbn %>
      </li>
      <!-- details button -->
      <form  method='post' action='/books/<%= book.id %>'>
        <button>Details</button>
        </form>
      <% }) %>
  
    </ul>


    

    <script src="js/app.js"></script>
  </body>
</html>